{% extends 'base.html.twig' %}

{% block title %}Page des Salle des classe{% endblock %}

{% block body %}
    <main class="container-fluid  border">
        <section class="my-4">
            <label for="annee-select" class="form-label">Année Scolaire :</label>
            <select name="annee-select" id="annee-select" class="form-select">
                <option value="2016-2017">2016-2017</option>
                <option value="2017-2018">2017-2018</option>
                <option value="2018-2019">2018-2019</option>
                <option value="2019-2020">2019-2020</option>
                <option value="2020-2021">2020-2021</option>
            </select>
        </section>

        <section class="row mt-3">
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card">
                    <div class="card-body bg-info">
                        <h1 class="h3 card-title">Prescolaire</h1>
                    </div>
                    <div class="card-footer  d-flex justify-content-between">
                        <span class="align-self-start">Public : </span>
                        <span class="align-self-end">Privé : </span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card">
                    <div class="card-body bg-success">
                        <h1 class="h3 card-title">Primaire</h1>
                    </div>
                    <div class="card-footer d-flex justify-content-between ">
                        <span class="align-self-start">Public : </span>
                        <span class="align-self-end">Privé : </span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card">
                    <div class="card-body bg-warning">
                        <h1 class="h3 card-title">Collège</h1>
                    </div>
                    <div class="card-footer d-flex justify-content-between ">
                        <span class="align-self-start">Public : </span>
                        <span class="align-self-end">Privé : </span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card">
                    <div class="card-body bg-danger">
                        <h1 class="h3 card-title">Lycée</h1>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <span class="align-self-start">Public : </span>
                        <span class="align-self-end">Privé : </span>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
